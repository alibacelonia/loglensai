# Lightsail deployment env defaults
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend
DJANGO_SECRET_KEY=replace-with-a-strong-production-secret

POSTGRES_DB=loglens
POSTGRES_USER=loglens
POSTGRES_PASSWORD=replace-with-strong-db-password

# Optional tuning
ANALYZE_RATE_LIMIT=10/min
SOURCE_RETENTION_ENABLED=true
SOURCE_RETENTION_DAYS=30
SOURCE_RETENTION_BATCH_SIZE=500

# Caddy reverse proxy
# Set to your domain for automatic HTTPS, e.g. logs.example.com
# For plain HTTP only (not recommended), use :80
CADDY_SITE_ADDRESS=example.com

# Docker memory/log tuning for Lightsail
POSTGRES_MEM_LIMIT=512m
REDIS_MEM_LIMIT=256m
REDIS_MAXMEMORY=128mb
BACKEND_MEM_LIMIT=768m
WORKER_MEM_LIMIT=768m
FRONTEND_MEM_LIMIT=768m
CADDY_MEM_LIMIT=256m
NODE_OPTIONS=--max-old-space-size=384
